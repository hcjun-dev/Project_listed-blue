-# edit.html.haml using partial

%h1 Edit Existing Item

= form_tag item_path(@item), :method => :put do

  = label :item, :category, 'Category'
  = select :item, :category, Item.all_categories
  
  = label :item, :title, 'Title'
  = text_field :item, 'title', required: true
  
  = label :item, :contact, 'Contact'
  = text_field :item, 'contact', value: current_user.email, :readonly => true
  
  = label :item, :description, 'Description'
  = text_area :item, 'description', size: "60x12"
  
  = label :item, :price, 'Price'
  = number_field :item, 'price', min: 0, step: 0.01
  
  %br
  %br
  = submit_tag 'Update Listing'
  = link_to 'Cancel', :back